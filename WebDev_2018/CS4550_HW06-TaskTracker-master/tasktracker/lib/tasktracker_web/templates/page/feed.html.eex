<%= if @current_user do %>
  <div class="row">
    <div class="col">
      <h1>Create a New Task</h1>
      <%= render TasktrackerWeb.TaskView, "form.html",
          Map.put(assigns, :action, task_path(@conn, :create)) %>
    </div>
<% end %>

  <div class="col">
    <%= render TasktrackerWeb.TaskView, "index.html", Map.put(assigns, :action, task_path(@conn, :index)) %>
  </div>
</div>
